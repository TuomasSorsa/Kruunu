<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DelUserInfoActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="124dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="216dp"
        android:gravity="center"
        android:text="Haluatko varmasti poistaa kaikki tiedot"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNo"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:onClick="enHalua"
        android:text="En halua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editSalasana"
        android:layout_width="213dp"
        android:layout_height="45dp"
        android:layout_marginEnd="518dp"
        android:layout_marginRight="518dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Kirjoita salasana"
        android:inputType="textPassword"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnDelUser"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="396dp"
        android:layout_marginRight="396dp"
        android:text="Haluan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>